<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.githubuserapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_github_purple_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_github_purple_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.GitHub2Rev">
        <activity android:name="com.dicoding.githubuserapp.activity.AboutActivity"></activity>
        <activity
            android:name="com.dicoding.githubuserapp.activity.SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.dicoding.githubuserapp.activity.DetailUserActivity" />
        <activity android:name="com.dicoding.githubuserapp.activity.MainActivity" />
    </application>

</manifest>